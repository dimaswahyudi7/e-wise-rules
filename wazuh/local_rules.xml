<group name="ewise,piracy,malicious,">
  <!-- Domain piracy dari DNS Scan -->
  <rule id="120001" level="8">
    <decoded_as>json</decoded_as>
    <field name="type">piracy.domain</field>
    <description>e‑WISE: Domain piracy terdeteksi (DNS)</description>
    <mitre id="T1071.004"/>
    <groups>piracy,network</groups>
  </rule>

  <!-- File piracy dari File Scan -->
  <rule id="120002" level="9">
    <decoded_as>json</decoded_as>
    <field name="type">piracy.file</field>
    <description>e‑WISE: File piracy terdeteksi</description>
    <mitre id="T1036,T1204"/>
    <groups>piracy,file</groups>
  </rule>

  <!-- IP malicious -->
  <rule id="120003" level="8">
    <decoded_as>json</decoded_as>
    <field name="type">malicious.ip</field>
    <description>e‑WISE: Koneksi ke IP berbahaya</description>
    <groups>malicious,network</groups>
  </rule>

  <!-- Korelasi multi‑indikator dalam jangka waktu pendek -->
  <rule id="120099" level="12" frequency="3" timeframe="3600">
    <if_matched_group>ewise</if_matched_group>
    <description>e‑WISE: Korelasi (≥3 event terkait dalam 1 jam)</description>
    <groups>ewise,correlation</groups>
  </rule>
</group>
